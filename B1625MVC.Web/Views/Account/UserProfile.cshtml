@model B1625MVC.BLL.DTO.UserInfo

@{
    ViewBag.Title = Model.UserName;
}

<h2>@Model.UserName</h2>
@if (Model.Avatar != null)
{
    <img style="width:128px; height:128px;" src="data:image;base64,@System.Convert.ToBase64String(Model.Avatar)" />
}
<br />
Registration date: @Model.RegistrationDate.Value.Date.ToString("dd MMM yyyy")
<br/>
Rating: @Model.Rating

