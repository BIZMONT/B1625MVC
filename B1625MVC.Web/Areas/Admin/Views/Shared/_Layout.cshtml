@using B1625MVC.Web.Helpers
@{
    IEnumerable<RouteLink> links = new List<RouteLink>()
    {
        new RouteLink("Home", new { area = "Admin", controller = "Home", action = "Index" }),
        new RouteLink("Users", new { area = "Admin", controller = "Account", action = "List" }),
        new RouteLink("Publications", new { area = "Admin", controller = "Home", action = "Index" }),
        new RouteLink("Comments", new { area = "Admin", controller = "Home", action = "Index" }),
    };
    var loginLink = new RouteLink("Log in", new { area = "", controller = "Account", action = "Login" });
    var logoutLink = new RouteLink("Log out", new { area = "", controller = "Account", action = "Logout" });
    var userLink = new RouteLink(User.Identity.Name, new { area = "", controller = "Account", action = "UserProfile", username = User.Identity.Name });
    var registrationLink = new RouteLink("Register", new { area = "", controller = "Account", action = "Registration" });
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/MenuStyle.css" />
    @RenderSection("Styles", false)
</head>
<body style="font-family:Arial, Helvetica, sans-serif; margin:0px">
    <div>
        <div class="menu">
            @Html.NavigationBar(links, loginLink, logoutLink, userLink, registrationLink)
        </div>
        <div style="display: table;margin-left:auto;margin-right:auto;margin-top:48px; padding-top:10px;padding-left:10px;padding-right:10px; ">
            @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts",false)
</body>
</html>
