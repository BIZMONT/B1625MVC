@using B1625MVC.BLL.DTO
@model IEnumerable<UserDataDto>
@{
    ViewBag.Title = "List";
}

<h2>Users</h2>

<table style="border-style:solid; border-width:1px">
    <thead>
        <tr>
            <td>Id</td>
            <td>Username</td>
            <td>Roles</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@string.Concat(user.Roles)</td>
                <td>
                    @Html.RouteLink("Edit", new { area = "Admin", controller = "Account", action = "Edit", accountId = user.Id })
                    @Html.RouteLink("Details", new { area = "Admin", controller = "Account", action = "Details", accountId = user.Id })
                    @Html.RouteLink("Delete", new { area = "Admin", controller = "Account", action = "DElete", accountId = user.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.RouteLink("Create", new { area = "Admin", controller = "Account", action = "Create"})

