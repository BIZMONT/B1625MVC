@model B1625MVC.Web.Areas.Admin.Models.CreateUserViewModel

@{
    ViewBag.Title = "Create";
}

<div class="form">
    <div class="form-title">Create</div>

    @using (Html.BeginForm())
    {
        <div class="form-field">
            @Html.LabelFor(rm => rm.UserName)
            @Html.EditorFor(rm => rm.UserName)
            @Html.ValidationMessageFor(rm => rm.UserName)
        </div>
        <div class="form-field">
            @Html.LabelFor(rm => rm.Email)
            @Html.EditorFor(rm => rm.Email)
            @Html.ValidationMessageFor(rm => rm.UserName)
        </div>
        <div class="form-field">
            @Html.LabelFor(rm => rm.Password)
            @Html.PasswordFor(rm => rm.Password)
        </div>
        <div class="form-field">
            @Html.LabelFor(rm => rm.PasswordConfirm)
            @Html.PasswordFor(rm => rm.PasswordConfirm)
            @Html.ValidationMessageFor(rm => rm.UserName)
        </div>
        <div class="form-field">
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div>
                    @Html.HiddenFor(m => m.Roles[i].Name)
                    @Html.CheckBoxFor(m => m.Roles[i].Checked)
                    @Model.Roles[i].Name
                </div>
            }
        </div>
        <div class="form-field">
            <input type="submit" value="Submit" />
        </div>
    }
    <div class="form-message">
        @Html.ValidationSummary(true)
    </div>
</div>
